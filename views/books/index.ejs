<% include ../partials/header %>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Author</th>
			<th>Year Published</th>
			<th>Edit?</th>
			<th>Delete?</th>
		</tr>
	</thead>
	<tbody>
	<% books.forEach(function(book){%>
		<tr>
			<td> <a href="/books/<%= book.id %>"><%= book.title %></a></td>
			<td><%= book.author %></td>
			<td><%= book.year %></td>
			<td><a href="/books/<%= book.id %>/edit">Edit</a></td>
			<td>
				<form action='/books/<%= book.id %>?_method=DELETE' method="POST"><input type="submit" value="X">
        </form>
			</td>
		</tr>
		<% }) %>
	</tbody>
</table>
<a href="/books/new"><button>Add A Book</button></a>
<a href="/"><button>Find A Book</button></a>
<% include ../partials/footer %>